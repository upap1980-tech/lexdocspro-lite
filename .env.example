# APIs de IA (opcional - dejar vacío para usar solo Ollama)

# OpenAI (ChatGPT) - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Groq (ULTRA RÁPIDO, GRATIS) - https://console.groq.com/keys
GROQ_API_KEY=gsk_...

# Perplexity - https://www.perplexity.ai/settings/api
PERPLEXITY_API_KEY=pplx-...

# Google Gemini - https://makersuite.google.com/app/apikey
GEMINI_API_KEY=...

# DeepSeek - https://platform.deepseek.com/api_keys
DEEPSEEK_API_KEY=...

# Anthropic Claude - https://console.anthropic.com/
ANTHROPIC_API_KEY=...

# Configuración
DEFAULT_AI_PROVIDER=ollama
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=lexdocs-legal

# ========================================
# SEGURIDAD - JWT (CRÍTICO EN PRODUCCIÓN)
# ========================================

# Secret key para JWT (GENERAR CON: openssl rand -hex 32)
JWT_SECRET_KEY=CAMBIAR_ESTO_POR_STRING_ALEATORIO_32_CHARS

# Duración de tokens (en segundos)
JWT_ACCESS_TOKEN_EXPIRES=3600          # 1 hora
JWT_REFRESH_TOKEN_EXPIRES=2592000      # 30 días

# ========================================
# CORS (Restringir en producción)
# ========================================

# En desarrollo: http://localhost:5001
# En producción: https://tu-dominio.com
CORS_ORIGINS=http://localhost:5001

# ========================================
# CONFIGURACIÓN FLASK
# ========================================

FLASK_ENV=development
DEBUG=True

# En producción: cambiar a production y False
# FLASK_ENV=production
# DEBUG=False
